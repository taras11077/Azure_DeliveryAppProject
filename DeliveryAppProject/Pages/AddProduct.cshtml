@page
@model AddProductModel
@{
}

<h1 class="text-center">Create Product</h1>
<hr />
<div class="d-flex justify-content-center" style="background-color: #e0f7df; padding: 50px;">
	<div class="col-md-6 p-4" style="background-color: #a5d6a7; border-radius: 10px; box-shadow: 0 0 10px rgba(0,0,0,0.1);">
		<form method="post" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Product.Name" class="control-label"></label>
				<input asp-for="Product.Name" class="form-control" />
				<span asp-validation-for="Product.Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Product.Price" class="control-label"></label>
				<input asp-for="Product.Price" class="form-control" />
				<span asp-validation-for="Product.Price" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Product.Description" class="control-label"></label>
				<input asp-for="Product.Description" class="form-control" />
				<span asp-validation-for="Product.Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label class="control-label"></label>
				<input name="Picture" class="form-control" type="file" />
			</div>
			<br/>
			<div class="form-group text-center">
				<input type="submit" value="Add" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div class="text-center mt-3">
	<a asp-action="Index">Back to List</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}



